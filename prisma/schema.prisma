// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://myuser:durak@localhost:5432/mytaskdb"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  email    String  @unique
  tasks    Task[]
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean @default(false)
  userId      Int
  user        User    @relation(fields: [userId], references: [id])
}
